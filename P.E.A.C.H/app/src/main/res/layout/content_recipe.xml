<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="mobileappchallenge.peach.RecipeActivity"
    tools:showIn="@layout/activity_recipe">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:id="@+id/imageView"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"
                android:layout_alignParentStart="true"
                android:background="#26cd23" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:text="Ingredients:"
                android:id="@+id/textView"
                android:layout_below="@+id/imageView"
                android:layout_alignParentStart="true"
                android:textSize="20dp"
                android:layout_alignEnd="@+id/listView" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Recipe"
                android:id="@+id/textView2"
                android:layout_marginStart="74dp"
                android:textSize="20dp"
                android:layout_below="@+id/imageView"
                android:layout_toEndOf="@+id/textView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/textView3"
                android:layout_alignBottom="@+id/textView2"
                android:layout_toEndOf="@+id/textView2"
                android:textSize="12dp"/>

            <ListView
                android:layout_width="110dp"
                android:layout_height="250dp"
                android:id="@+id/listView"
                android:choiceMode="none"
                android:layout_below="@+id/textView"
                android:layout_alignParentStart="true"
                android:smoothScrollbar="false"
                android:scrollingCache="true"
                android:layoutMode="clipBounds" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Cook time:"
                android:id="@+id/textView4"
                android:textSize="20dp"
                android:layout_alignTop="@+id/textView5"
                android:layout_alignStart="@+id/textView2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="XX"
                android:id="@+id/textView5"
                android:textSize="20dp"
                android:layout_below="@+id/textView3"
                android:layout_alignStart="@+id/textView3" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:text="Calories:"
                android:id="@+id/textView6"
                android:textSize="20dp"
                android:layout_below="@+id/textView4"
                android:layout_toStartOf="@+id/textView5"
                android:layout_marginTop="31dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="XX"
                android:id="@+id/textView7"
                android:textSize="20dp"
                android:layout_alignTop="@+id/textView6"
                android:layout_toEndOf="@+id/textView6" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:text="Carbohydrates:"
                android:id="@+id/textView8"
                android:textSize="20dp"
                android:layout_below="@+id/textView6"
                android:layout_toStartOf="@+id/textView7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="XX"
                android:id="@+id/textView9"
                android:textSize="20dp"
                android:layout_below="@+id/textView7"
                android:layout_toEndOf="@+id/textView8" />

            <TextView
                android:layout_width="48dp"
                android:layout_height="30dp"
                android:text="Fat:"
                android:id="@+id/textView10"
                android:textSize="20dp"
                android:layout_below="@+id/textView8"
                android:layout_alignEnd="@+id/textView8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="XX"
                android:id="@+id/textView11"
                android:textSize="20dp"
                android:layout_below="@+id/textView8"
                android:layout_toEndOf="@+id/textView10" />

            <TextView
                android:layout_width="85dp"
                android:layout_height="30dp"
                android:text="Protein:"
                android:id="@+id/textView12"
                android:textSize="20dp"
                android:layout_below="@+id/textView10"
                android:layout_alignEnd="@+id/textView10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="XX"
                android:id="@+id/textView13"
                android:textSize="20dp"
                android:layout_alignTop="@+id/textView12"
                android:layout_alignStart="@+id/textView11" />

            <TextView
                android:layout_width="85dp"
                android:layout_height="30dp"
                android:text="Sodium:"
                android:id="@+id/textView14"
                android:textSize="20dp"
                android:layout_below="@+id/textView12"
                android:layout_alignStart="@+id/textView6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="XX"
                android:id="@+id/textView15"
                android:textSize="20dp"
                android:layout_below="@+id/textView12"
                android:layout_toEndOf="@+id/textView12" />

            <TextView
                android:layout_width="68dp"
                android:layout_height="30dp"
                android:text="Fiber:"
                android:id="@+id/textView16"
                android:textSize="20dp"
                android:layout_below="@+id/textView14"
                android:layout_toStartOf="@+id/textView15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="XX"
                android:id="@+id/textView17"
                android:textSize="20dp"
                android:layout_below="@+id/textView15"
                android:layout_alignStart="@+id/textView15" />

            <TextView
                android:layout_width="68dp"
                android:layout_height="30dp"
                android:text="Cooking Instructions:"
                android:id="@+id/textView18"
                android:textSize="20dp"
                android:layout_below="@+id/listView"
                android:layout_alignStart="@+id/textView8"
                android:layout_alignParentEnd="true" />

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="500dp"
                android:id="@+id/scrollView2"
                android:layout_below="@+id/textView18"
                android:layout_alignParentStart="true"
                android:fillViewport="false" >

            </ScrollView>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="xxxxxxxxxxxx"
                android:id="@+id/textView19"
                android:layout_alignTop="@+id/scrollView2"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
